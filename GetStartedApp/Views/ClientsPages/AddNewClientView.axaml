<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:GetStartedApp.ViewModels.ClientsPages"
			 x:DataType="vm:AddNewClientViewModel"
			 xmlns:lang="clr-namespace:GetStartedApp.Assets.Languages"
			 x:CompileBindings="True"
			 Background="{DynamicResource myBackgroundFaintBlueColor}"
             x:Class="GetStartedApp.Views.ClientsPages.AddNewClientView"
			 FontFamily="Roboto">


	<StackPanel Margin="10 50" FlowDirection="RightToLeft"
				HorizontalAlignment="Center">
		
		<TextBlock Text="{x:Static lang:Resources.ClientName}" Margin="0,10,0,10" />
		<TextBox Text="{Binding ClientName, Mode=TwoWay}"
				 FlowDirection="LeftToRight" 
				 Width="200" />

		<TextBlock Text="{x:Static lang:Resources.PhoneNumber}" Margin="0,10,0,10"/>
		<TextBox Text="{Binding PhoneNumber, Mode=TwoWay}" 
				 FlowDirection="LeftToRight"
				 Width="200" />

		<TextBlock Text="{x:Static lang:Resources.Email}" Margin="0,10,0,10"/>
		<TextBox Text="{Binding Email, Mode=TwoWay}"
				 FlowDirection="LeftToRight" 
				 Width="200" />

		<Button Content="{Binding ClientActionBtnName}" Command="{Binding AddOrEditOrDeleteClient}" Margin="0,20,0,10"/>
		
	</StackPanel>

</UserControl>
